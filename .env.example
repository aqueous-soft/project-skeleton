APP_NAME="Skeleton Project"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://local.skeleton

# Locales y Faker (Starter Kit)
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance y workers
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database
PHP_CLI_SERVER_WORKERS=4

# Bcrypt
BCRYPT_ROUNDS=12

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Docker/Sail users/groups (permisos en volúmenes para local.skeleton)
WWWUSER=1000
WWWGROUP=1000  # Número GID (no 'sail'); ajusta con 'id -g' si es diferente

# App Service (Sail: nombre del servicio Docker para comandos internos)
APP_SERVICE=local.skeleton

# Database (usa contenedor 'mysql')
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=skeleton_db
DB_USERNAME=skeleton_usr
DB_PASSWORD=skeleton_pwd
MYSQL_EXTRA_OPTIONS=""
DB_SOCKET=

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcast
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue (recomendado: cambia a 'redis' para usar contenedor 'redis')
QUEUE_CONNECTION=database

# Cache (recomendado: cambia a 'redis' para usar contenedor 'redis')
CACHE_STORE=database
# CACHE_PREFIX=

# Redis (usa contenedor 'redis')
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (usa contenedor 'mailpit' para dev; forwarding en 1025/8025)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@skeleton.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (opcional, no Docker-specific)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite (usa contenedor 'node'; forwarding en VITE_PORT:5173)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY:-}"
VITE_PUSHER_HOST="${PUSHER_HOST:-}"
VITE_PUSHER_PORT="${PUSHER_PORT:-443}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME:-https}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER:-mt1}"

# Pusher (para broadcasting en Vite, opcional; defaults para evitar warnings)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Scout/Meilisearch (usa contenedor 'meilisearch'; forwarding en 7700/7701)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=meilisearch
MEILISEARCH_PORT=7700
MEILISEARCH_KEY=
MEILISEARCH_INDEX_PREFIX=
MEILISEARCH_NO_ANALYTICS=false

# Docker ports (forwarding para acceso local desde host)
APP_PORT=80  # Para local.skeleton (app)
FORWARD_DB_PORT=3307  # MySQL local
FORWARD_REDIS_PORT=6380  # Redis local
FORWARD_MEILISEARCH_PORT=7701  # Meilisearch local
FORWARD_MAILPIT_PORT=1026  # Mailpit SMTP local
FORWARD_MAILPIT_DASHBOARD_PORT=8025  # Mailpit UI local
VITE_PORT=5173  # Node/Vite local

# Xdebug (en contenedor local.skeleton; activa para IDE)
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG="client_host=host.docker.internal"

# Opcionales para testing (selenium en Docker, no requiere vars extra)
# TELESCOPE_ENABLED=false  # Si usas Telescope
# SANCTUM_STATEFUL_DOMAINS=local.skeleton,localhost  # Si usas Sanctum
